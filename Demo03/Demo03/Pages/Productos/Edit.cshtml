<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="producto.id" />
            <div class="form-group">
                <label asp-for="producto.nombre" class="control-label"></label>
                <input asp-for="producto.nombre" class="form-control" />
                <span asp-validation-for="producto.nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="producto.pvp" class="control-label"></label>
                <input asp-for="producto.pvp" class="form-control" />
                <span asp-validation-for="producto.pvp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="producto.stock" class="control-label"></label>
                <input asp-for="producto.stock" class="form-control" />
                <span asp-validation-for="producto.stock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="producto.categoria" class="control-label"></label>
                <select asp-for="selecciona" asp-items="Model.listacategoria" class="form-select">

