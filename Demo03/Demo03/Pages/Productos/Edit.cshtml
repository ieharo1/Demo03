            </div>
            <div class="form-group">
                <label asp-for="producto.fecha_caducidad" class="control-label"></label>
                <input asp-for="producto.fecha_caducidad" class="form-control" />
                <span asp-validation-for="producto.fecha_caducidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="producto.descripcion" class="control-label"></label>
                <input asp-for="producto.descripcion" class="form-control" />
                <span asp-validation-for="producto.descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

